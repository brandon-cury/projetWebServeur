{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le cours{% endblock %}
{% block body %}
<section class="row">
    <div class="col-md-6 offset-3">
        <h2 class="display-4">Modifier le cours</h2>
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <label for="{{ form.full_description.vars.id }}" class="my-2">Longue description :</label>
            <trix-editor input="{{ form.full_description.vars.id }}" class="trix-full-description" required></trix-editor>
            <input type="submit" value="Modifier le cours" class="btn btn-outline-dark my-4">
        {{ form_end(form) }}
    </div>
</section>

{% endblock %}