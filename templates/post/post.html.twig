{% extends 'base.html.twig' %}

{% block body %}
<h1>Details de l'article</h1>

<div class="card mb-5">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="{{ asset('images/posts/' ~ post.image)}}" class="img-fluid rounded-start" alt="{{ post.title }}">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <p>Categorie :{{ post.category.name }}</p>
                <p>Ecrit par : {{ post.user.firstName }} {{ post.user.lastName }}</p>
                <h5 class="card-title">{{ post.title|capitalize }}</h5>

                <p>{{ post.createdAt|date('d/m/Y') }}</p>

                <p class="card-text">{{ post.content|nl2br }}...</p>

                <p class="card-text"><a href="{{ path('app_posts')}}" class="btn btn-secondary">Tout les articles</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}