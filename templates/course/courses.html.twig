{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <main class="container">
        <section id="courses">
            <div class="row">
                <div class="col-md-12">
                    {% for cat in categories %}
                        {% if cat.name == categorie.name %}
                            <a href="{{ path('app_courses', {category_slug: cat.slug}) }}" class="btn btn-success btn-sm">{{ cat.name }}</a>
                        {% else %}
                            <a href="{{ path('app_courses', {category_slug: cat.slug}) }}" class="btn btn-outline-success btn-sm">{{ cat.name }}</a>
                        {% endif %}
                    {% endfor %}
                    <h1 class="display-6">Tout nos cours
                        {% if categorie.name != 'Tous' %}
                            {{ categorie.name }}
                        {% endif %}
                    </h1>

                    {% for course in courses %}
                        <div class="card mb-5">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="{{ (course.image != null)?course.image : asset('images/cours/default.jpg') }}" class="img-fluid rounded-start" alt="{{ course.name }}">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <p>Categorie : {{ course.category.name }}</p>
                                        <p>Niveau : {{ course.level.name }}</p>
                                        <h5 class="card-title">{{ course.name|capitalize }}</h5>

                                        <p class="card-text">{{ course.smallDescription|u.truncate(100, '...', false) }}...</p>

                                        <p>{{ course.createdAt|date('d/m/Y') }}</p>

                                        <p class="card-text"><a href="{{ path('app_course', {slug: course.slug}) }}" class="btn btn-secondary">Lire la suite</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
            <div class="d-flex justify-content-center">
                {{ knp_pagination_render(courses) }}
            </div>
        </section>
    </main>
{% endblock %}
